{
  "manifest_version": 3,
  "name": "Bless Network Helper",
  "version": "1.0",
  "description": "Helper for Bless Network",
  "permissions": [
    "storage",
    "webRequest",
    "activeTab"
  ],
  "host_permissions": [
    "https://bless.network/*",
    "https://gateway-run.bls.dev/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://bless.network/*"],
      "js": ["content.js"]
    }
  ]
}
